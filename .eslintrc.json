{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "standard"
  ]
  "rules": {
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 2
      }
    ],
    "no-var": [
      "error"
    ],
    "no-new": [
      "off"
    ]
  }
}
